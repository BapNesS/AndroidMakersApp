<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="fr.paug.androidmakers.ui.fragment.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/padding"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/padding_double"
            android:paddingRight="@dimen/padding_double"
            android:paddingTop="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/about_android_makers"/>

        <org.apmem.tools.layouts.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/padding_double"
            android:paddingRight="@dimen/padding_double"
            android:paddingTop="4dp">

            <com.robertlevonyan.views.chip.Chip
                android:id="@+id/twitter_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:clickable="true"
                android:elevation="2dp"
                android:padding="@dimen/padding"
                android:gravity="center"
                app:backgroundColor="#03A9F4"
                app:chipText="@string/twitter"
                app:textColor="@android:color/white"/>

            <com.robertlevonyan.views.chip.Chip
                android:id="@+id/twitter_hashtag_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:clickable="true"
                android:elevation="2dp"
                android:padding="@dimen/padding"
                android:gravity="center"
                app:backgroundColor="#03A9F4"
                app:chipText="@string/twitter_hashtag"
                app:textColor="@android:color/white"/>

            <com.robertlevonyan.views.chip.Chip
                android:id="@+id/google_plus_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:clickable="true"
                android:elevation="2dp"
                android:padding="@dimen/padding"
                android:gravity="center"
                app:backgroundColor="#F44336"
                app:chipText="Google+"
                app:textColor="@android:color/white"/>

            <com.robertlevonyan.views.chip.Chip
                android:id="@+id/fb_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:clickable="true"
                android:elevation="2dp"
                android:padding="@dimen/padding"
                android:gravity="center"
                app:backgroundColor="#3F51B5"
                app:chipText="Facebook"
                app:textColor="@android:color/white"/>

            <com.robertlevonyan.views.chip.Chip
                android:id="@+id/yt_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:clickable="true"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="@dimen/padding"
                app:backgroundColor="#F1F1F1"
                app:chipText="Youtube"
                app:textColor="@android:color/holo_red_dark"/>

        </org.apmem.tools.layouts.FlowLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/padding"
            android:text="@string/wifi"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/padding_double"
            android:paddingRight="@dimen/padding_double"
            android:paddingTop="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/wifi_network"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/padding_double"
            android:paddingRight="@dimen/padding_double"
            android:paddingTop="4dp"
            android:textIsSelectable="true"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/wifi_password"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/padding"
            android:text="Silver sponsors"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sponsor_google"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="Google"
                android:padding="12dp"
                android:scaleType="fitXY"
                android:tag="https://d.android.com"
                app:srcCompat="@drawable/google"/>

            <ImageView
                android:id="@+id/sponsor_xebia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="Xebia"
                android:padding="12dp"
                android:scaleType="fitXY"
                android:tag="https://xebia.fr"
                app:srcCompat="@drawable/xebia"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/padding"
            android:text="Media"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="italic"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

    </LinearLayout>

</ScrollView>