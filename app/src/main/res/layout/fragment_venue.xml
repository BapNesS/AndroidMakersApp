<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/venue_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/venue"/>

        <TextView
            android:id="@+id/conference_venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/padding"
            android:text="@string/venue_name"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/conference_venue_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:text="@string/venue_location"
            android:textColor="@color/black"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/conference_venue_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_double"
            android:layout_marginRight="@dimen/padding_double"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/directions"
            android:textSize="14sp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/venue_locate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_double"
            android:layout_marginLeft="@dimen/padding_double"
            android:layout_marginRight="@dimen/padding_double"
            android:text="@string/locate_on_map"
            android:textColor="@android:color/white"
            app:backgroundTint="?attr/colorAccent"/>

    </LinearLayout>

</ScrollView>